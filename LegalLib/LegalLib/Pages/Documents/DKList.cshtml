@page
@model LegalLib.DKListModel

@{
    ViewData["Title"] = "DKList";
}

<h1>DKList</h1>

<form method="post">
    <div class="form-group">
        <select asp-for="KlasifikasiID" class="form-control" asp-items="Model.KlasifikasiSL">
        </select>
        <input type="hidden" asp-for="DocumentID" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tblDocKlasifikasi[0].DocumentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblDocKlasifikasi[0].KlasifikasiID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.tblDocKlasifikasi)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KlasifikasiID)
                    @Model.GetKlasifikasi(item.KlasifikasiID)
                </td>
                <td>
                    <a asp-page="./DKDelete" asp-route-id="@item.DKID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="DocEdit" asp-route-id="@Model.DocumentID">Back to Edit</a>
