@page "{id:int}"
@model LegalLib.CommentIndexModel

@{
    ViewData["Title"] = "Comment";
}

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-light-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-page="/Index" class="brand-link">
        <span class="brand-text font-weight-light" style="text-align:center">
            <img src="~/images/logopertamina.png" alt="Digital Library" class="brand-image"
                 style="opacity: .8">
            <br />
        </span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/AdminLTE-3.0.2/dist/img/avatar.png" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <h3>@Model.SUsername</h3>
                <p>
                    @{
                        if (Model.SUsername == null)
                        {
                            <strong><a asp-page="/Login/Index">LOGIN</a></strong>
                        }
                        else
                        {
                            <strong><a asp-page="/Login/Logout">LOGOUT</a></strong>
                        }
                    }
                </p>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="nav-item has-treeview menu-open">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            PERATURAN EXTERNAL
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        @foreach (var item in Model.TblCategory)
                        {
                            <li class="nav-item">
                                <a asp-page="/Search/CatDisplay" asp-route-id="@item.CategoryID" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </p>
                                </a>
                            </li>

                        }

                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            PERATURAN INTERNAL
                        </p>
                    </a>
                    <a href="https://www.google.com" class="nav-link">
                        <i class="far fa-circle nav-icon"></i>
                        <p>
                            Portal STK
                        </p>
                    </a>

                </li>
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-copy"></i>
                        <p>
                            MASTER DOCUMENTS
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-page="/Documents/DocCreate" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>CREATE DOCUMENT</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Documents/DocList" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>LIST DOCUMENT</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Approval/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>APPROVE DOCUMENT</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-chart-pie"></i>
                        <p>
                            MASTER DATA
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-page="/Category/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>MASTER CATEGORY</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Criteria/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>MASTER CRITERIA</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Klasifikasi/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>MASTER KLASIFIKASI</p>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Comments
        </h1>
        <h4>@Model.DocumentID</h4>

    </section>

    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="container-fluid">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TblNewComment.Comment" class="control-label"></label>
                    <input asp-for="TblNewComment.Comment" class="form-control" />
                    <span asp-validation-for="TblNewComment.Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
            <br />

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].DocumentID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].UserID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].CommentDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].Comment)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TblComment)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DocumentID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CommentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Comment)
                            </td>
                            <td>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>


    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
