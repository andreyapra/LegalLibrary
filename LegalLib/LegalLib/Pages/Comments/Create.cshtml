@page
@model LegalLib.CommentCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>tblComments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="tblComments.DocumentID" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="tblComments.UserID" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="tblComments.Username" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="tblComments.CommentDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="tblComments.Comment" class="control-label"></label>
                <input asp-for="tblComments.Comment" class="form-control" />
                <span asp-validation-for="tblComments.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
